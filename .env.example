# Evolution API Configuration
EVOLUTION_BASE_URL=http://localhost:8080
EVOLUTION_API_KEY=your-global-api-key-here

# Instance Configuration
EVOLUTION_INSTANCE_NAME=my-instance

# Optional: Webhook Configuration
EVOLUTION_WEBHOOK_URL=https://your-webhook.com/webhook
EVOLUTION_WEBHOOK_EVENTS=MESSAGE_RECEIVED,MESSAGE_SENT

# Optional: Debug Mode
EVOLUTION_DEBUG=false
EVOLUTION_LOG_LEVEL=INFO

# Optional: Timeout Settings (in seconds)
EVOLUTION_REQUEST_TIMEOUT=30
EVOLUTION_CONNECT_TIMEOUT=10

# Optional: Retry Configuration
EVOLUTION_MAX_RETRIES=3
EVOLUTION_RETRY_DELAY=1